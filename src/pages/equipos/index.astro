---
import Container from '@components/Container.astro'
import SectionTitle from '@components/SectionTitle.astro'
import Layout from '@layouts/Layout.astro'
import { getAllTeams } from '@services/teams'
const teams = await getAllTeams()
---

<Layout title='Equipos'>
	<SectionTitle title='Equipos' />
	<Container>
		<div class='bg-white p-20 shadow-xl rounded -mt-10 z-10'>
			<section class='grid grid-cols-3 gap-8'>
				{
					teams.map((team) => {
						const { id, name, image } = team
						return (
							<article class='overflow-hidden col-span-1 rounded aspect-video bg-blue-400'>
								<a
									class='group flex h-full items-center justify-center relative'
									href={`/team/${id}`}
									title={`Ver equipo ${name}`}
								>
									<img class='z-10 w-28 h-28' src={`${image}`} />
									<h3 class='z-10 font-black text-white text-3xl'>Aniquiladores</h3>
									<div
										class={`z-0 absolute inset-0 opacity-50 bg-[url('${image}')] bg-center bg-[size:150%] group-hover:bg-[size:180%] transition`}
									/>
								</a>
							</article>
						)
					})
				}
			</section>
		</div>
	</Container>
</Layout>
