---
const response = await fetch('https://kings-league-api.carlos8alb.workers.dev/teams')
const teams = await response.json()
---

<header class='flex flex-col w-screen bg-gradient-to-b from-[#ff6900] via-[#ff6900] to-[#fcb900]'>
	<nav>
		<ul class='flex'>
			{
				teams.map(({ id, image, name }) => (
					<li>
						<a href={`/team/${id}`}>
							<img src={image} alt={`Escudo del equipo ${name}`} class='aspect-square w-12' />
						</a>
					</li>
				))
			}
		</ul>
	</nav>
	<nav>
		<ul class='flex gap-x-4 font-semibold opacity-80'>
			<li>
				<a href='/equipos'>Equipos</a>
			</li>
			<li>
				<a href='/calendario'>Calendario</a>
			</li>
			<li>
				<a href='/estadisticas'>Estad√≠sticas</a>
			</li>
			<li>
				<a href='/contacto'>Contacto</a>
			</li>
			<li>
				<a href='/reglamento'>Reglamento</a>
			</li>
		</ul>
	</nav>
</header>
